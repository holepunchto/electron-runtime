{
  "name": "holepunch-runtime",
  "version": "2.0.0",
  "description": "Holepunch Runtime",
  "main": "main.js",
  "scripts": {
    "pkg:testbuild": "electron-builder --config.releaseInfo.releaseNotes=testbuild",
    "pkg:local": "electron-builder --config.releaseInfo.releaseNotes=local",
    "pkg": "electron-builder"
  },
  "build": {
    "appId": "com.runtime.holepunch",
    "productName": "Holepunch Runtime",
    "executableName": "holepunch-runtime",
    "copyright": "Copyright Â© 2022 Holepunch",
    "nodeVersion": "current",
    "files": [
      "main.js"
    ],
    "asar": false,
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "./entitlements.mac.plist",
      "entitlementsInherit": "./entitlements.mac.plist"
    },
    "linux": {
      "category": "AudioVideo"
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "afterPack": "./after-pack.js",
    "afterAllArtifactBuild": "./after-all-artifact-build.js"
  },
  "author": "Holepunch",
  "devDependencies": {
    "electron": "^17.4.8",
    "electron-builder": "^23.1.0",
    "localdrive": "^1.6.0"
  }
}
